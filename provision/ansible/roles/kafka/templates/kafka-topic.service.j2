[Unit]
Description=Managing kafka topic: %I
Requires=kafka.service
After=kafka.service

[Service]
Type=oneshot
RemainAfterExit=true
User={{ kafka_user }}
Group={{ kafka_user }}
ExecStartPre=/bin/sleep 4
ExecStart={{ kafka_dir }}/bin/kafka-topics.sh --create --zookeeper localhost:2181 --replication-factor 1 --partitions 1 --topic %i
ExecStop={{ kafka_dir }}/bin/kafka-topics.sh --delete --zookeeper localhost:2181 --topic %i

[Install]
WantedBy=multi-user.target
